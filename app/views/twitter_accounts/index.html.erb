<div class="d-flex align-items-center justify-content-between">
    <h1>Twitter Accounts</h1>
    <%= button_to "Connect a Twitter Account", "/auth/twitter", method: :post, class: 'btn btn-primary' %>
</div>

<% @twitter_accounts.each do |account| %>
    <div class="d-flex align-items-center mb-4">
        <div class="me-4">
            <%= image_tag account.image, class: "rounded-circle" %>
            <%= link_to "@#{account.username}", "https://twitter.com/#{account.username}", target: :_blank  %>
        </div>
        <%= button_to "Disconnect", account, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
<% end %>